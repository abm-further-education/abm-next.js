{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["*.ts", "../src/lib/**/*.ts", "../src/types/**/*.ts", "../src/domains/**/*.ts", "../src/domains/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
